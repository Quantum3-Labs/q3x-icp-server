# Database
DATABASE_URL="postgresql://icp_user:icp_password@localhost:5433/icp_canister_db"
DB_CONNECTION_TIMEOUT_MS=30000
DB_MAX_CONNECTIONS=10

# Application
NODE_ENV=development
PORT=4000
CORS_ORIGIN="http://localhost:3000"
API_PREFIX="api"
LOG_LEVEL="info"

# ICP Configuration
ICP_REPLICA_URL="http://localhost:4943"
BACKEND_PRIVATE_KEY="your_generated_private_key_here"
ICP_REQUEST_TIMEOUT_MS=60000
ICP_MAX_RETRIES=3
ICP_RETRY_DELAY_MS=1000

# Canister Assets
CANISTER_WASM_PATH="./assets/wallet.wasm"

# Cycles
DEFAULT_CANISTER_CYCLES="1000000000000"